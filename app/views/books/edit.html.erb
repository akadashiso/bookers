<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %>"error prohibited this product from being saved:"</h2>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %></br>
  <%= f.submit 'Update Book' %></br>
<% end %>

<%= link_to "Show", book_path(@book) %> | <a href="/books">Back</a>

<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
 <% end %>